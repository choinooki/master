{% if section.index <= 2 %}
    {{ 'tabbed-content.css' | asset_url | preload_tag: as: 'style' }}
  {% endif %}
  {{ 'tabbed-content.css' | asset_url | stylesheet_tag }}
  <div class="section-container scheme-{{ section.settings.color_scheme }}">
    <div class="container-sm">
        {% if section.settings.heading != blank or section.settings.description != blank %}
            <div class="section-header-content-box {{ section.settings.heading_alignment }} container" >
            {% if section.settings.heading != blank %}
            {%- capture markers_prefix -%}
                <span class="markers-text {{ section.settings.markers_font }}">
                {%- endcapture -%}
                {%- capture markers_suffix -%}
                </span>
                {%- endcapture -%}
                
            <{{ section.settings.seo_heading }} class="section-heading {{ section.settings.heading_size }}" data-aos="fade-up"
            data-aos-duration="500" data-aos-easing="linear" data-aos-once="true">
                {{ section.settings.heading | replace: "[", markers_prefix | replace: "]", markers_suffix }}
            </{{ section.settings.seo_heading }}>
            {% endif %}
            {% if section.settings.description != blank %}
            <div class="section-description rte" data-aos="fade-up"
            data-aos-duration="700" data-aos-easing="linear" data-aos-once="true">
                <p>{{ section.settings.description | newline_to_br }}</p>
            </div>
            {% endif %}
            </div>
        {% endif %}
      <tabs-wrapper {% if section.settings.auto_change_tab %}class="auto-change-tabs-true" data-auto-switch="{{ section.settings.auto_change_tab }}" data-autochange-time="{{ section.settings.tab_change_time | times: 1000 }}"{% endif %}>
          <div class="tabbed-content-tabs">
            <ul class="tabbed-content-tab-list" tab-content-header>
              {% assign counter_index = 1 %}
              {% for block in section.blocks %}
                {% if block.settings.tab_title != blank %}
                  <li class="tabbed-content-tab-list-item">
                    <a href="#" class="heading-font tabbed-content-tab-list-item-link{% if counter_index == 1 %} active{% endif %}" data-tab-trigger="tabbed-content-{{ block.id }}"  {{ block.shopify_attributes }}>{{ block.settings.tab_title }}</a>
                  </li>
                {% assign counter_index = counter_index |  plus: 1 %}
                {% endif %}
              {% endfor %}
            </ul>
          </div>
          <div class="tabbed-content-wrapper" tab-content-wrapper>
            {% assign counter_index = 1 %}
            {% for block in section.blocks %}
              {% if block.settings.tab_title != blank %}
                <div class="tabbed-content-item{% if counter_index == 1 %} active{% endif %}" data-tab-content="tabbed-content-{{ block.id }}">
                {% case block.type %}
                  {% when 'short_videos' %}
                    {% liquid 
                        assign image_size = block.settings.image_ratio
                        if image_size == 'landscape'
                          assign imageRatio = '70'
                        elsif image_size == 'square'
                          assign imageRatio = '100'
                        elsif image_size == 'portrait'
                          assign imageRatio = '130'
                        else 
                          assign imageRatio = '100'
                        endif
                      %}

                  <div class="tabbed-content-product-reels-wrapper">
                      {% for i in (1..3) %}
                        {% assign video_id = 'video_' | append : i %}
                        {% assign image_id = 'video_thumbnail_' | append : i %}
                        <div class="tabbed-content-product-reels-item">
                          <div class="tabbed-content-product-reels-media">

                          {%- liquid
                            assign poster = block.settings[video_id].preview_image
                            assign cover_image = block.settings[image_id]
                            if cover_image != null
                              assign poster = cover_image
                            endif
                           -%}
                            <div class="media-box" style="--image-ratio:{{ imageRatio }}%;">
                              {% if block.settings[video_id] != blank and block.settings.autoplay %}
                                  {{ block.settings[video_id] | video_tag: image_size: '1100x', class: 'tabbed-content-video', autoplay: true, loop: true, mute: true, controls: false, preload: 'none' }}
                              {% elsif poster != blank %}
                                {% render 'image', image: poster %}
                              {% else %}
                                 {{ 'product-apparel-' | append: i | placeholder_svg_tag: 'placeholder-svg' }}
                              {% endif %}                            
                            </div>
                            
                            {% if block.settings[video_id] != blank %}
                              <tabbed-short-video class="tabbed-content-product-reels-btn" data-popup="tabbed-video-{{ section.id }}" data-video-url="{% if block.settings[video_id].sources[0].url contains 'mp4' %}{{ block.settings[video_id].sources[0].url -}}{% else %}{{ block.settings[video_id].sources[1].url -}}{% endif %}">
                                <svg width="21" height="24" viewBox="0 0 21 24" fill="none">
                                  <path d="M19.5312 9.90372C20.8646 10.6735 20.8646 12.598 19.5312 13.3678L3.18721 22.8041C1.85388 23.5739 0.187209 22.6116 0.187209 21.072L0.18721 2.19954C0.18721 0.659939 1.85388 -0.302315 3.18721 0.467486L19.5312 9.90372Z" fill="currentColor"/>
                                </svg>
                              </tabbed-short-video>
                            {% endif %}
                          </div>
                        </div>
                        {% endfor %}
                  </div>
                {% when 'collection_products' %}
                  {%  assign collection = block.settings.tab_collection %}
                    <div class="tabbed-content-collection-products-wrapper">
                      <div class="tabbed-content-collection-products-left">
                        <div class="tabbed-content-collection-products-main-image">
                          {%- liquid
                          if block.settings.custom_image != blank
                           assign imageRatio = 1 | divided_by:  block.settings.custom_image.aspect_ratio | times: 100 | append: '%'
                          else
                             assign imageRatio = 100 | append: '%'
                          endif
                        %} 
                          <div class="media-box" style="--image-ratio:{{ imageRatio }};">
                              {% if block.settings.custom_image != blank %}
                                {% render 'image', image: block.settings.custom_image %} 
                              {% elsif collection.featured_image != blank %}
                                {% render 'image', image: collection.featured_image %}
                              {% else %}
                                {{ 'collection-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                              {% endif %}
                          </div>
                        </div>
                      </div>
                      <div class="tabbed-content-collection-products-right">
                        <h6 class="tabbed-content-collection-title">
                          {% if block.settings.heading != blank %}
                            {{ block.settings.heading }}
                          {% elsif collection != blank %}
                            {{ collection.title }}
                          {% endif %}
                        </h6>
                        <div class="tabbed-content-collection-products">
                          {% if collection != blank and collection.products_count > 0 %}
                           {% for product in collection.products limit: 3  %}
                              <div class="tabbed-content-collection-product-item">
                                {% render 'horizontal-product-card', product: product %}
                              </div>
                            {% endfor %}
                          {% else %}
                            {% for i in (1..3)  %}
                              <div class="tabbed-content-collection-product-item">
                                {% render 'horizontal-product-card' %}
                              </div>
                            {% endfor %}
                          {% endif %}
                        </div>
                      </div>
                    </div>
                  {% when 'video' %}
                    <div id="video-tab-{{ block.id }}" class="tabbed-content-video-wrapper{% if block.settings.video != blank %} autoplay-{{ block.settings.autoplay }}{% else %} autoplay-false{% endif %}" data-video-main-wrapper>
                      <div class="tabbed-video-wrapper" data-video-wrapper>
                        <div class="tabbed-video-thumbnail media-box-fixed" data-video-thumbnail>
                          <div class="media-box">
                            {% if block.settings.cover_image != blank %}
                              {% render 'image', image: block.settings.cover_image %}
                            {% else %}
                              {{ 'hero-apparel-3' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                            {% endif %}
                          </div>
                        </div>
                        {% if block.settings.video != blank %}
                        <video class="videoBackgroundFile"
                            {% if block.settings.autoplay %}
                              autoplay muted loop playsinline
                            {% else %}
                              controls
                            {% endif %}
                            data-autoplay="{{ block.settings.autoplay }}"
                            data-video-image-wrapper
                          >
                            <source
                              src="{% if block.settings.video.sources[0].url contains 'mp4' %}{{ block.settings.video.sources[0].url -}}{% else %}{{ block.settings.video.sources[1].url -}}{% endif %}"
                              type="video/mp4"
                            >
                           </video>
                        {% endif %}
                      </div>
                      {% if block.settings.video != blank %}
                        <div class="tabbed-video-content-wrapper" data-video-content-wrapper>
                          <a href="#" class="tabbed-video-play-button" role="button" aria-label="Play button" data-video-play-button>
                            <svg width="33" height="38" viewBox="0 0 33 38" fill="none">
                              <path d="M3.3001 38C2.69618 38 2.09556 37.81 1.56425 37.4338C1.08631 37.0923 0.691864 36.6161 0.418164 36.0503C0.144463 35.4845 0.000544022 34.8476 0 34.1999V3.79939C0 2.48076 0.594018 1.25714 1.56425 0.565529C2.04324 0.226415 2.58926 0.0331475 3.15097 0.00389818C3.71268 -0.0253512 4.27163 0.110378 4.77524 0.398326L31.176 15.5986C31.7242 15.9148 32.1851 16.4004 32.5073 17.001C32.8294 17.6017 33 18.2937 33 18.9997C33 19.7056 32.8294 20.3977 32.5073 20.9983C32.1851 21.599 31.7242 22.0846 31.176 22.4007L4.77524 37.601C4.31323 37.867 3.80172 38 3.3001 38Z" fill="currentColor"/>
                            </svg>
                          </a> 
                        </div>
                      {% endif %}
                    </div>
                  {% when 'image_with_text' %} 
                    <div id="image-with-text-{{ block.id }}" class="tabbed-content-image-with-text-wrapper image-position-{{ block.settings.image_position }} image-{{ block.settings.image_width }} border-{{ block.settings.enable_border }}">
                        <div class="tabbed-content-image-with-text-images">
                          <div class="tabbed-content-image-with-text-img">
                            {%- liquid
                                if block.settings.image != blank
                                 assign imageRatio = 1 | divided_by:  block.settings.image.aspect_ratio | times: 100 | append: '%'
                                else
                                   assign imageRatio = 100 | append: '%'
                                endif
                              %} 
                            <div class="media-box" style="--image-ratio: {{ imageRatio }};">
                              {%- liquid 
                                    if block.settings.image != blank
                                      render 'image', image: block.settings.image 
                                    else 
                                      echo 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg'
                                    endif 
                                -%}
                            </div>
                          </div>
                          <div class="tabbed-content-image-with-text-content background-{{ block.settings.enable_content_background }}">
                            <div class="tabbed-content-image-with-text-content-inner">
                            {% if block.settings.heading != blank %}
                                {%- capture markers_prefix -%}
                                  <span class="markers-text {{ block.settings.markers_font }}">
                                  {%- endcapture -%}
                                  {%- capture markers_suffix -%}
                                  </span>
                                  {%- endcapture -%}
                                    
                                <{{ block.settings.seo_heading }} class="tabbed-content-image-with-text-heading {{ block.settings.heading_size }}">
                                  {{ block.settings.heading | replace: "[", markers_prefix | replace: "]", markers_suffix }}
                                </{{ block.settings.seo_heading }}>
                                {% endif %}
                                
                                {% if block.settings.text != blank %}
                                  <div class="tabbed-content-image-with-text-desc rte text-{{ block.settings.text_size }}">
                                    {{ block.settings.text | replace : '<p></p>', '<br>'}}
                                  </div>
                                {% endif %}
                                {% if block.settings.btn_url  != blank and block.settings.btn_text != blank %}
                                <div class="tabbed-content-image-with-text-button">
                                   <a href="{{ block.settings.btn_url }}" class="{% if block.settings.btn_style == 'link' %}primary_btn text-underline{% elsif block.settings.btn_style == 'outline' %}outline-button button{% else %}button{% endif %} {{ block.settings.btn_size }}-btn"><span>{{ block.settings.btn_text }}</span></a>
                                </div>
                              {% endif %}
                            </div>
                          </div>
                        </div>
                      </div>
                {% endcase %} 
                </div>
                {% assign counter_index = counter_index |  plus: 1 %}
              {% endif %}
            {% endfor %}
            
          </div>
        </tabs-wrapper>
    </div>
  </div>


  <div id="tabbed-video-{{ section.id }}" class="popup tabbed-content-video-popup position-center background-enabled  scheme-{{ settings.popup_color_scheme }}"  data-tabbed-content-video-popup data-popup-body>
		<div class="close-fullwidth" data-popup-close></div>
		<div class="popup-dialog medium">
			<div class="popup-content">
				<button class="popup-close" data-popup-close aria-label="close">
					{% render 'theme-icons', theme_icon: 'popup_close' %}
				</button>
        <div class="tabbed-content-video-popup-content" data-popup-content>

        </div>
      </div>
    </div>
  </div>


  <style>
   #shopify-section-{{ section.id }}{
    --top-spacer:{{ section.settings.top_space_desktop }}px;
    --bottom-spacer:{{ section.settings.bottom_space_desktop }}px;
    --tab-change: {{ section.settings.tab_change_time }}s;
  }
  {% for block in section.blocks %}
    {% if block.type == 'video' %}
       #video-tab-{{ block.id }}{
          --media-height: {{ block.settings.video_height }};
          --overlay-opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
       }
    {% elsif block.type == 'image_with_text' %}
      {% assign text_alignment = block.settings.content_alignment | split: '_' %}
       #image-with-text-{{ block.id }}{
        --text-position: {{ block.settings.content_position }};
        --text-alignment1: {{ text_alignment[0] }};
        --text-alignment2: {{ text_alignment[1] }};
       }
    {% endif %}
  {% endfor %}
  @media only screen and (max-width:767px){
    #shopify-section-{{ section.id }}{
      --top-spacer:{{ section.settings.top_space_mobile }}px;
      --bottom-spacer:{{ section.settings.bottom_space_mobile }}px;
    }
    {% for block in section.blocks %}
      {% if block.type == 'video' %}
        #video-tab-{{ block.id }}{
            --media-height:{{ block.settings.mobile_video_height }};
        }
      {% endif %}
    {% endfor %}
  }
   {% if section.settings.section_visibility == 'large' %}
    @media (max-width: 767px) {
      #shopify-section-{{ section.id }}{
        display: none !important;
      }
    }
  {% elsif section.settings.section_visibility == 'small' %}
    @media (min-width: 768px) {
      #shopify-section-{{ section.id }}{
        display: none !important;
      }
    }
  {% endif %}
  </style>
{% schema %}
 {
  "name": "t:sections.tabbed-content.name",
  "tag": "section",
  "class": "tabbed-content",
  "disabled_on": {
    "groups": [
      "header",
      "footer",
      "custom.Overlay"
    ]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:global.header.space_section.label"
    },
    {
      "type": "range",
      "id": "top_space_desktop",
      "label": "t:global.top_space_desktop.label",
      "default": 30,
      "min": 0,
      "max": 100,
      "step": 5
    },
    {
      "type": "range",
      "id": "bottom_space_desktop",
      "label": "t:global.bottom_space_desktop.label",
      "default": 30,
      "min": 0,
      "max": 100,
      "step": 5
    },
    {
      "type": "range",
      "id": "top_space_mobile",
      "label": "t:global.top_space_mobile.label",
      "default": 30,
      "min": 0,
      "max": 100,
      "step": 5
    },
    {
      "type": "range",
      "id": "bottom_space_mobile",
      "label": "t:global.bottom_space_mobile.label",
      "default": 30,
      "min": 0,
      "max": 100,
      "step": 5
    },
    {
      "type": "select",
      "id": "section_visibility",
      "label": "t:global.common.section_visibility.label",
      "default": "always",
      "options": [
        {
          "label": "t:global.common.section_visibility.options.always",
          "value": "always"
        },
        {
          "label": "t:global.common.section_visibility.options.small",
          "value": "small"
        },
        {
          "label": "t:global.common.section_visibility.options.large",
          "value": "large"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "auto_change_tab",
      "label": "t:sections.tabbed-content.settings.auto_change_tab.label",
      "default": false
    },
    {
      "type": "range",
      "id": "tab_change_time",
      "label": "t:sections.tabbed-content.settings.tab_change_time.label",
      "default": 5,
      "min": 5,
      "max": 10,
      "step": 1,
      "unit": "s"
    },
    {
      "type": "header",
      "content": "t:global.header.header_section.label"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "t:global.common.general_labels.heading",
      "info": "t:global.common.general_labels.heading_info"
    },
    {
      "type": "select",
      "id": "markers_font",
      "label": "t:global.common.markers_font.label",
      "info": "t:global.common.markers_font.info",
      "default": "accent-font",
      "options": [
        {
          "label": "t:global.common.markers_font.accent-font.label",
          "value": "accent-font"
        },
        {
          "label": "t:global.common.markers_font.body-font.label",
          "value": "body-font"
        },
        {
          "label": "t:global.common.markers_font.heading-font.label",
          "value": "heading-font"
        }
      ]
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "t:global.common.general_labels.heading_size",
      "default": "h2",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        },
        {
          "value": "h4",
          "label": "H4"
        },
        {
          "value": "h5",
          "label": "H5"
        },
        {
          "value": "h6",
          "label": "H6"
        }
      ]
    },
    {
      "type": "select",
      "id": "seo_heading",
      "label": "t:global.common.general_labels.heading_tag",
      "info": "t:global.common.infos.seo_heading.label",
      "default": "h2",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        },
        {
          "value": "h4",
          "label": "H4"
        },
        {
          "value": "h5",
          "label": "H5"
        },
        {
          "value": "h6",
          "label": "H6"
        }
      ]
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "t:global.common.general_labels.description"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "t:global.common.content_alignment.label",
      "default": "text-center",
      "options": [
        {
          "label": "t:global.common.content_alignment.options.left.label",
          "value": "text-left"
        },
        {
          "label": "t:global.common.content_alignment.options.center.label",
          "value": "text-center"
        }
      ]
    },
    {
      "type": "header",
      "content": "t:global.header.color_section.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "primary",
      "label": "t:global.header.color_scheme.label"
    }
  ],
  "blocks": [
    {
      "type": "short_videos",
      "name": "t:sections.tabbed-content.blocks.short_videos.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "t:sections.tabbed-content.blocks.short_videos.settings.tab_title.label",
          "default": "Short videos"
        },
        {
          "type": "checkbox",
          "id": "autoplay",
          "label": "t:sections.tabbed-content.blocks.video.settings.autoplay.label",
          "default": true
        },
        {
          "type": "select",
          "id": "image_ratio",
          "label": "t:sections.featured-product.settings.image_ratio.label",
          "default": "portrait",
          "options": [
            {
              "value": "landscape",
              "label": "t:global.common.image_ratio.options.landscape"
            },
            {
              "value": "square",
              "label": "t:global.common.image_ratio.options.square"
            },
            {
              "value": "portrait",
              "label": "t:global.common.image_ratio.options.portrait"
            }
          ]
        },
        {
          "type": "header",
          "content": "t:sections.tabbed-content.blocks.short_videos.settings.header.video_1"
        },
        {
          "type": "video",
          "id": "video_1",
          "label": "t:sections.tabbed-content.blocks.short_videos.settings.video.label"
        },
        {
          "type": "image_picker",
          "id": "video_thumbnail_1",
          "label": "t:sections.tabbed-content.blocks.short_videos.settings.video_thumbnail.label"
        },
        {
          "type": "header",
          "content": "t:sections.tabbed-content.blocks.short_videos.settings.header.video_2"
        },
        {
          "type": "video",
          "id": "video_2",
          "label": "t:sections.tabbed-content.blocks.short_videos.settings.video.label"
        },
        {
          "type": "image_picker",
          "id": "video_thumbnail_2",
          "label": "t:sections.tabbed-content.blocks.short_videos.settings.video_thumbnail.label"
        },
        {
          "type": "header",
          "content": "t:sections.tabbed-content.blocks.short_videos.settings.header.video_3"
        },
        {
          "type": "video",
          "id": "video_3",
          "label": "t:sections.tabbed-content.blocks.short_videos.settings.video.label"
        },
        {
          "type": "image_picker",
          "id": "video_thumbnail_3",
          "label": "t:sections.tabbed-content.blocks.short_videos.settings.video_thumbnail.label"
        }
      ]
    },
    {
      "type": "collection_products",
      "name": "t:sections.tabbed-content.blocks.collection_products.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "t:sections.tabbed-content.blocks.collection_products.settings.tab_title.label",
          "default": "Collection products"
        },
        {
          "type": "collection",
          "id": "tab_collection",
          "label": "t:sections.tabbed-content.blocks.collection_products.settings.tab_collection.label"
        },
        {
            "type": "image_picker",
            "id": "custom_image",
            "label": "t:sections.tabbed-content.blocks.collection_products.settings.custom_image.label",
            "info": "t:sections.tabbed-content.blocks.collection_products.settings.custom_image.info"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "t:sections.tabbed-content.blocks.collection_products.settings.heading.label",
            "default": "Heading",
            "info": "t:sections.tabbed-content.blocks.collection_products.settings.heading.info"
          }
      ]
    },
    {
      "type": "video",
      "name": "t:sections.tabbed-content.blocks.video.name",
      "limit": 1,
      "settings": [
        {
