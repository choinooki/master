{% if section.index <= 2 %}
    {{ 'collactions-collage.css' | asset_url | preload_tag: as: 'style' }}
  {% endif %}
  {{ 'collactions-collage.css' | asset_url | stylesheet_tag }}

<div class="section-container scheme-{{ section.settings.color_scheme }}{% if section.settings.use_gradient_background %} gradient-background{% endif %}">

    {% if section.settings.background_image %}
        <div class="section-bg-image image-overlay background-blur-{{ section.settings.background_blur }}">
            {% liquid                       
                assign height = section.settings.background_image.width | divided_by: section.settings.background_image.aspect_ratio | round
                assign sizes = 'auto'
                assign widths = '189, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2160, 2376, 2592, 2808, 3024'              
                echo section.settings.background_image | image_url: width: 3840 | image_tag: height: height, sizes: sizes, widths: widths, fetchpriority: 'high'            
            %} 
        </div>
      {% endif %}
  
    <div class="container">

    {% if section.settings.heading != blank or section.settings.description != blank %}
        <div class="section-header-content-box {{ section.settings.heading_alignment }}">
            {% if section.settings.heading != blank %}
              {%- capture markers_prefix -%}
                <span class="markers-text {{ section.settings.markers_font }}">
                {%- endcapture -%}
                {%- capture markers_suffix -%}
                </span>
                {%- endcapture -%}
                <{{ section.settings.seo_heading }} class="section-heading {{ section.settings.heading_size }}" data-aos="fade-up"
                data-aos-duration="500" data-aos-easing="linear" data-aos-once="true">
                    {{- section.settings.heading | replace: "[", markers_prefix | replace: "]", markers_suffix -}}
                </{{ section.settings.seo_heading }}>
            {% endif %}
            {% if section.settings.description != blank %}
                <div class="section-description rte" data-aos="fade-up"
                data-aos-duration="700" data-aos-easing="linear" data-aos-once="true">
                  <p>{{ section.settings.description | newline_to_br }}</p>
                </div>
            {% endif %}
        </div>
    {% endif %}
        <div class="collactions-collage-wrapper">
            {% for block in section.blocks %}
                <div class="collactions-collage-block">
                    <div class="collactions-collage-block-inner">
                        <collage-image-animator>
                                <div class="collactions-collage-image-wrapper">
                                    <{%if block.settings.url_1 != blank%}a href="{{ block.settings.url_1 }}"{% else %}div{% endif %} class="collactions-collage-image animate-hvr collactions-collage-image-left-top" data-images>
                                        <div class="media-box" style="--image-ratio: 100%;">
                                            {%- liquid 
                                                if block.settings.image_1 != blank
                                                render 'image', image: block.settings.image_1 
                                                else 
                                                echo 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg'
                                                endif 
                                            -%}
                                        </div>
                                        {% if block.settings.title_1 != blank %}
                                            <div class="collactions-collage-image-info">
                                                <p class="collactions-collage-image-title heading-font text-{{ section.settings.card_text_size }}">{{ block.settings.title_1 }}</p>
                                            </div>
                                        {% endif %}
                                    </{%if block.settings.url_1 != blank%}a{% else %}div{% endif %}>
                                    <{%if block.settings.url_2 != blank%}a href="{{ block.settings.url_2 }}"{% else %}div{% endif %} class="collactions-collage-image animate-hvr collactions-collage-image-center" data-images>
                                        
                                            <div class="media-box" style="--image-ratio: 100%;">
                                                {%- liquid 
                                                    if block.settings.image_2 != blank
                                                    render 'image', image: block.settings.image_2 
                                                    else 
                                                    echo 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg'
                                                    endif 
                                                -%}
                                            </div>
                                            {% if block.settings.title_2 != blank %}
                                                <div class="collactions-collage-image-info">
                                                    <p class="collactions-collage-image-title heading-font text-{{ section.settings.card_text_size }}">{{ block.settings.title_2 }}</p>
                                                </div>
                                            {% endif %}
                                    </{%if block.settings.url_2 != blank%}a{% else %}div{% endif %}>
                                    <{%if block.settings.url_3 != blank%}a href="{{ block.settings.url_3 }}"{% else %}div{% endif %} class="collactions-collage-image animate-hvr collactions-collage-image-right" data-images>
                                           <div class="media-box" style="--image-ratio: 100%;">
                                                {%- liquid 
                                                    if block.settings.image_3 != blank
                                                    render 'image', image: block.settings.image_3 
                                                    else 
                                                    echo 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg'
                                                    endif 
                                                -%}
                                            </div>
                                            {% if block.settings.title_3 != blank %}
                                                <div class="collactions-collage-image-info">
                                                    <p class="collactions-collage-image-title heading-font text-{{ section.settings.card_text_size }}">{{ block.settings.title_3 }}</p>
                                                </div>
                                            {% endif %}
                                          
                                    </{%if block.settings.url_3 != blank%}a{% else %}div{% endif %}>
                                    <{%if block.settings.url_4 != blank%}a href="{{ block.settings.url_4 }}"{% else %}div{% endif %}  class="collactions-collage-image animate-hvr collactions-collage-image-left-bottom" data-images>
                                            <div class="media-box" style="--image-ratio: 100%;">
                                                {%- liquid 
                                                    if block.settings.image_4 != blank
                                                    render 'image', image: block.settings.image_4 
                                                    else 
                                                    echo 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg'
                                                    endif 
                                                -%}
                                            </div>
                                            {% if block.settings.title_4 != blank %}
                                                <div class="collactions-collage-image-info">
                                                    <p class="collactions-collage-image-title heading-font text-{{ section.settings.card_text_size }}">{{ block.settings.title_4 }}</p>
                                                </div>
                                            {% endif %}
                                        </{%if block.settings.url_4 != blank%}a{% else %}div{% endif %}>
                                    <{%if block.settings.url_5 != blank%}a href="{{ block.settings.url_5 }}"{% else %}div{% endif %}  class="collactions-collage-image animate-hvr collactions-collage-image-right-bottom" data-images>
                                            <div class="media-box" style="--image-ratio: 100%;">
                                                {%- liquid 
                                                    if block.settings.image_5 != blank
                                                     render 'image', image: block.settings.image_5 
                                                    else 
                                                    echo 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg'
                                                    endif 
                                                -%}
                                            </div>
                                            {% if block.settings.title_5 != blank %}
                                                <div class="collactions-collage-image-info">
                                                    <p class="collactions-collage-image-title heading-font text-{{ section.settings.card_text_size }}">{{ block.settings.title_5 }}</p>
                                                </div>
                                            {% endif %}   
                                        </{%if block.settings.url_5 != blank%}a{% else %}div{% endif %}>     
                                    </div>
                        </collage-image-animator>
                        {% if block.settings.heading != blank %}
                            <div class="collactions-collage-body {{ block.settings.heading_alignment }}">
                                <{{ block.settings.seo_heading }} class="collection-collage-title {{ block.settings.heading_size }}">
                                    {{- block.settings.heading -}}
                                </{{ block.settings.seo_heading }}>
                            </div>
                        {% endif %}
                    </div>
                    {% if block.settings.btn_text_1 != blank %}
                        <div class="collection-collage-button text-center">
                            <a
                                href="{{ block.settings.btn_link_1 }}"
                                class="{% if block.settings.button_syle_1 == 'link' %}hyperlink text-underline {% elsif  block.settings.button_syle_1 == 'outline' %} outline-button button {% else %} button {% endif %} {{ block.settings.button_size_1 }}-btn"
                                title="{{ block.settings.btn_text_1 }}"
                            >
                                <span>{{- block.settings.btn_text_1 -}}</span>
                            </a>
                        </div>
                   {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
<style>
    #shopify-section-{{ section.id }}.shopify-section {
      --top-spacer:{{ section.settings.top_space_desktop }}px;
      --bottom-spacer:{{ section.settings.bottom_space_desktop }}px;
      --background-overlay-opacity: {{ section.settings.background_ovelay_opacity | divided_by: 100.0 }};
    }
    @media only screen and (max-width:767px) {
      #shopify-section-{{ section.id }}.shopify-section{
        --top-spacer:{{ section.settings.top_space_mobile }}px;
        --bottom-spacer:{{ section.settings.bottom_space_mobile }}px;
      }
    }
    {% if section.settings.section_visibility == 'large' %}
      @media (max-width: 767px) {
        #shopify-section-{{ section.id }}{
          display: none !important;
        }
      }
    {% elsif section.settings.section_visibility == 'small' %}
      @media (min-width: 768px) {
        #shopify-section-{{ section.id }}{
          display: none !important;
        }
      }
    {% endif %}

  </style>
   
